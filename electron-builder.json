{
	"productName": "PostLLM",
	"appId": "com.postllm.app",
	"asar": false,
	"directories": {
		"output": "release/${version}"
	},
	"files": ["dist-electron/**/*", "dist/**/*", "build/**/*", "public/**/*"],
	"mac": {
		"artifactName": "${productName}_${version}.${ext}",
		"target": ["dmg", "zip"]
	},
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": ["x64"]
			}
		],
		"artifactName": "${productName}_${version}.${ext}"
	},
	"nsis": {
		"oneClick": false,
		"perMachine": false,
		"allowToChangeInstallationDirectory": true,
		"deleteAppDataOnUninstall": false
	},
	"publish": {
		"provider": "github",
		"repo": "postllm/postllm-app",
		"owner": "postllm",
		"releaseType": "draft"
	}
}
